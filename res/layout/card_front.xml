<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0EEEE"
    android:gravity="center" >
        
  	<RelativeLayout
		android:layout_height="127dp"
		android:layout_width="fill_parent"
		android:background="@drawable/selector_card_background"
		android:layout_marginRight="15dp"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		>

 		<TextView
 		    android:id="@+id/eventNameView"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:layout_centerHorizontal="true"
 		    android:layout_alignParentTop="true"
 		    android:fontFamily="Roboto"
 		    android:text="@string/temp"
 		    android:textSize="20sp"
 		    android:paddingTop="2dp"
 		    android:maxLines="2"
 		    android:paddingLeft="50dp" />
 		
 		<TextView
 		    android:id="@+id/daysView"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:layout_centerHorizontal="true"
 		    android:layout_centerVertical="true"
 		    android:fontFamily="Roboto"
 		    android:text="@string/temp"
 		    android:textSize="40sp"
 		    android:paddingLeft="50dp" />

 		<TextView
 		    android:id="@+id/weekendNoticeView"
 		    android:layout_width="wrap_content"
 		    android:layout_height="wrap_content"
 		    android:layout_alignParentBottom="true"
 		    android:layout_alignParentRight="true"
 		    android:text="@string/excludes_weekends"
 		    android:textColor="#B5B5B5"
 		    android:visibility="gone"
 		    android:textAppearance="?android:attr/textAppearanceSmall" />

		<TextView
		    android:id="@+id/calMonthView"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/tempmonth"
		    android:paddingLeft="28dp"
		    android:paddingTop="21dp"
		    android:textColor="#ffffff"
		    android:textSize="22sp" />
		
		<TextView
 			    android:id="@+id/calDayView"
 			    android:layout_width="wrap_content"
 			    android:layout_height="wrap_content"
 			    android:text="@string/tempday"
 			    android:paddingLeft="26dp"
 			    android:paddingTop="48dp"
 			    android:textColor="#ff7070"
 			    android:textSize="35sp" />

 		<FrameLayout
 		    android:id="@+id/calendarFrameView"
 		    android:layout_width="75dp"
 		    android:layout_height="75dp"
 		    android:layout_centerVertical="true"
 		    android:layout_marginLeft="8dp"
 		    android:layout_alignParentLeft="true"
 		    android:background="@drawable/calendar_image" >
 		</FrameLayout>

 		<ImageView
 		    android:id="@+id/notificationIconView"
 		    android:contentDescription="@string/notification_icon_imageview"
 		    android:layout_width="25dp"
 		    android:layout_height="25dp"
 		    android:layout_alignParentRight="true"
 		    android:layout_alignParentTop="true"
 		    android:layout_marginRight="3dp"
 		    android:layout_marginTop="3dp"
 		    android:visibility="gone"
 		    android:src="@drawable/ic_action_alarms" />
  	    
    </RelativeLayout>

</LinearLayout>