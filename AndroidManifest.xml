<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sm.daysuntilcardslite"
    android:versionCode="4"
    android:versionName="1.8" >
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lite_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Example" >
        <meta-data android:name="com.google.android.gms.version"
           android:value="@integer/google_play_services_version" />
        <activity
            android:name="com.sm.daysuntilcardslite.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sm.daysuntilcardslite.CreateEvent"
            android:label="@string/title_activity_create_event"
            android:parentActivityName="com.sm.daysuntilcardslite.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sm.daysuntilcardslite.MainActivity" />
        </activity>
        <activity
            android:name="com.sm.daysuntilcardslite.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.sm.daysuntilcardslite.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sm.daysuntilcardslite.HelpMenu"
            android:label="@string/title_activity_help_menu"
            android:parentActivityName="com.sm.daysuntilcardslite.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sm.daysuntilcardslite.MainActivity" />
        </activity>
        <activity
            android:name="com.sm.daysuntilcardslite.EditEvent"
            android:label="@string/title_activity_edit_event"
            android:parentActivityName="com.sm.daysuntilcardslite.MainActivity"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sm.daysuntilcardslite.MainActivity" />
        </activity>
        <activity
            android:name="com.sm.daysuntilcardslite.DialogActivity"
            android:label="@string/title_activity_dialog"
            android:parentActivityName="com.sm.daysuntilcardslite.MainActivity"
            android:theme="@style/HoloDialog" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sm.daysuntilcardslite.MainActivity" />
        </activity>
        <activity
            android:name="com.sm.daysuntilcardslite.ImportCal"
            android:label="@string/import_from_calendar_activity_name"
            android:parentActivityName="com.sm.daysuntilcardslite.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sm.daysuntilcardslite.MainActivity" />
        </activity>
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
			<service android:name="com.sm.daysuntilcardslite.CardsService" android:exported="false">
			    <intent-filter>
			        <action android:name="com.sm.daysuntilcardslite.CardsService" />
			    </intent-filter>
			</service>
			<service android:name="com.sm.daysuntilcardslite.BootService" android:exported="false">
	   			 <intent-filter>
		    	    <action android:name="com.sm.daysuntilcardslite.BootService" />
		   		 </intent-filter>
			</service>
			
			<receiver
			    android:name="com.sm.daysuntilcardslite.BootReceiver"
			    android:enabled="true"
			    android:exported="true"
			    android:label="BootReceiver">
			    <intent-filter>
			        <action android:name="android.intent.action.BOOT_COMPLETED" />
			    </intent-filter>
			</receiver>
						<receiver android:name=".MyAppWidgetProvider" >
   			 <intent-filter>
   			    <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
  			 </intent-filter>
			    <meta-data android:name="android.appwidget.provider"
			               android:resource="@xml/big_appwidget_info" />
			</receiver>
			<activity android:name=".WidgetConfigure" android:theme="@style/HoloDialog">
			    <intent-filter>
			        <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
			    </intent-filter>
			</activity>
    </application>

</manifest>
